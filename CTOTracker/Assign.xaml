<Window
    x:Class="CTOTracker.AddTask"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CTOTracker"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    Title="Assign Schedule"
    Width="400"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Label
            Margin="43,10,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Employee :" />
        <Label
            Margin="37,77,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Task : " />
        <Label
            Margin="37,149,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Start Date :" />
        <Label
            Margin="251,149,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="End Date :" />
        <Label
            Margin="43,276,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Time In:">
            <Label.Style>
                <Style TargetType="Label">
                    <Setter Property="Visibility" Value="Collapsed" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsChecked, ElementName=showTimeCheckBox}" Value="True">
                            <Setter Property="Visibility" Value="Visible" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Label.Style>
        </Label>
        <Label
            Margin="252,276,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Time out :">
            <Label.Style>
                <Style TargetType="Label">
                    <Setter Property="Visibility" Value="Collapsed" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsChecked, ElementName=showTimeCheckBox}" Value="True">
                            <Setter Property="Visibility" Value="Visible" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Label.Style>
        </Label>

        <Label
            Margin="10,217,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Add Time :" />
        <ComboBox
            x:Name="Employee_Cmbox"
            Width="311"
            Margin="43,36,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top" />

        <ComboBox
            x:Name="Task_Cmbox"
            Width="311"
            Margin="43,103,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            IsEditable="True" />
        <DatePicker
            x:Name="startDatePicker"
            Margin="43,180,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            IsTodayHighlighted="True"
            PreviewKeyDown="DatePicker_PreviewKeyDown"
            SelectedDate="{x:Static sys:DateTime.Now}"
            SelectedDateFormat="Short" />
        <DatePicker
            x:Name="endDatePicker"
            Margin="251,180,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            PreviewKeyDown="DatePicker_PreviewKeyDown"
            SelectedDate="{x:Static sys:DateTime.Now}"
            SelectedDateFormat="Short" />
        <CheckBox
            x:Name="showTimeCheckBox"
            Margin="82,223,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Show Time" />
        <TextBox
            x:Name="startTimeTextBox"
            Width="100"
            Margin="43,307,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="09:00 AM">
            <TextBox.Style>
                <Style TargetType="TextBox">
                    <Setter Property="Visibility" Value="Collapsed" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsChecked, ElementName=showTimeCheckBox}" Value="True">
                            <Setter Property="Visibility" Value="Visible" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBox.Style>
        </TextBox>
        <TextBox
            x:Name="endTimeTextBox"
            Width="100"
            Margin="254,307,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="05:00 PM">
            <TextBox.Style>
                <Style TargetType="TextBox">
                    <Setter Property="Visibility" Value="Collapsed" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsChecked, ElementName=showTimeCheckBox}" Value="True">
                            <Setter Property="Visibility" Value="Visible" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBox.Style>
        </TextBox>
        <Button
            x:Name="AddButton"
            Width="50"
            Height="25"
            Margin="248,361,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="Button_Click"
            Content="ADD" />
        <Button
            Width="50"
            Height="25"
            Margin="303,361,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="Button_Click_1"
            Content="CANCEL" />
        <Button
            x:Name="SAVE"
            Width="48"
            Height="25"
            Margin="249,361,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="SAVE_Click"
            Content="Save" />
        <TextBox
            x:Name="schedIDTextBox"
            Width="28"
            Height="22"
            Margin="10,10,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="TextBox"
            TextWrapping="Wrap" />
    </Grid>
</Window>