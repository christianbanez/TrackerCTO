<UserControl
    x:Class="CTOTracker.View.UserControls.ReportView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CTOTracker.View.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="768"
    d:DesignWidth="1360"
    mc:Ignorable="d">
    <Grid>

        <!--  ScheduleDisplay  -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="5*" />
                <RowDefinition Height="80*" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <!--  Employee HEADER  -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="425*" />
                    <ColumnDefinition Width="390*" />
                    <ColumnDefinition Width="247*"/>
                    <ColumnDefinition Width="213*" />
                    <ColumnDefinition Width="85*" />
                </Grid.ColumnDefinitions>

                <Label
                    Margin="10,0,0,0"
                    Content="Employee CTO Records"
                    FontSize="24" />

                <Button
                    x:Name="btnExport"
                    Grid.Column="4"
                    Margin="5,0,10,0"
                    Content="Export"
                    FontSize="16" Height="35" VerticalAlignment="Center" Click="btnExport_Click" />
            </Grid>

            <!--  SCHDULE_TABLE  -->
            <DataGrid
                x:Name="reportDataGrid"
                Margin="0,0,10,5"
                Grid.Row="1"
                d:ItemsSource="{d:SampleData ItemCount=5}"
                CanUserReorderColumns="False"
                CanUserResizeColumns="False"
                CanUserResizeRows="False"
                IsReadOnly="True"
                Style="{StaticResource table_style}" HorizontalAlignment="Right" Width="1350" MouseDoubleClick="reportDataGrid_MouseDoubleClick" />

            <!--  Employee Filtered Panel  -->
            <Grid x:Name="EmpFilPnl" Grid.Row="1" Background="AliceBlue" Visibility="Hidden">
                <Grid.RowDefinitions>
                    <RowDefinition Height="20*"/>
                    <RowDefinition Height="80*"/>
                </Grid.RowDefinitions>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="3*"/>
                    </Grid.ColumnDefinitions>

                    <Label Content="Employee"
                       Foreground="Black"
                       FontSize="20"
                       FontWeight="Bold"
                       Margin="25,0,0,0"/>

                    <Label Grid.Row="1"
                       Content="Name:"
                       Foreground="Black"
                       FontSize="20"
                       Margin="50,0,0,0" Height="48" VerticalContentAlignment="Center"/>
                    <ComboBox x:Name="cbxEmpList" Grid.Row="1"
                       Grid.Column="1"
                       Margin="10,5,50,5" VerticalContentAlignment="Center" IsEditable="True" Visibility="Hidden"/>

                    <Label Grid.Row="3"
                       Content="Infor ID:"
                       Foreground="Black"
                       FontSize="20"
                       Margin="50,0,0,0" VerticalContentAlignment="Center"/>
                    <Label x:Name="lblID"
                       Grid.Row="3"
                       Grid.Column="1"
                       Content="ID PLACEHOLDER"
                       Foreground="Black"
                       FontSize="20"
                       Margin="10,0,0,0" VerticalContentAlignment="Center"/>

                    <Label Grid.Row="1"
                       Grid.Column="2"
                       Content="Contact Number:"
                       Foreground="Black"
                       FontSize="20" VerticalContentAlignment="Center"/>
                    <Label x:Name="lblEmpName"
                       Grid.Column="1"
                       Content="NAME PLACEHOLDER"
                       Foreground="Black"
                       FontSize="20"
                       Margin="10,45,0,3" VerticalContentAlignment="Center" Grid.RowSpan="2"/>

                    <Label Grid.Row="2"
                       Grid.Column="2"
                       Content="Role:"
                       Foreground="Black"
                       FontSize="20"/>
                    <Label x:Name="lblRole"
                       Grid.Row="3"
                       Grid.Column="4"
                       Content="ROLE PLACEHOLDER"
                       Foreground="Black"
                       FontSize="20"
                       Margin="10,0,0,0" VerticalContentAlignment="Center"/>

                </Grid>


                <DataGrid
                x:Name="scheduleDataGrid1"
                Margin="0,0,10,5"
                Grid.Row="1"
                d:ItemsSource="{d:SampleData ItemCount=5}"
                CanUserReorderColumns="False"
                CanUserResizeColumns="False"
                CanUserResizeRows="False"
                IsReadOnly="True" 
                Style="{StaticResource table_style}"/>
            </Grid>


        </Grid>
    </Grid>
</UserControl>
