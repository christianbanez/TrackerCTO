<UserControl
    x:Class="CTOTracker.View.UserControls.ReportView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CTOTracker.View.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="768"
    d:DesignWidth="1360"
    mc:Ignorable="d">
    <Grid>

        <!--  ScheduleDisplay  -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="5*" />
                <RowDefinition Height="40*" />
                <RowDefinition Height="5*" />
                <RowDefinition Height="40*" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <!--  Employee HEADER  -->
            <Grid Background="AliceBlue">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="0.5*" />
                </Grid.ColumnDefinitions>

                <Label
                    Margin="10,0,0,0"
                    Content="Employee"
                    FontSize="24" />

                <ComboBox
                    x:Name="cbxFilterBy"
                    Grid.Column="2"
                    Margin="5"
                    HorizontalAlignment="Stretch"
                    FontSize="16"
                    IsEditable="True"
                    IsReadOnly="True"
                    Text="Filter by" SelectionChanged="cbxFilterBy_SelectionChanged" >
                    <ComboBoxItem Content="Remaining CTO Balance"/>
                    <ComboBoxItem Content="Ongoing Tasks"/>
                </ComboBox>


                <Button
                    x:Name="btnExport"
                    Grid.Column="3"
                    Margin="5,5,10,5"
                    Content="Export"
                    FontSize="16" />
            </Grid>

            <!--  SCHDULE_TABLE  -->
            <DataGrid
                x:Name="employee_ReportDataGrid"
                Grid.Row="1"
                d:ItemsSource="{d:SampleData ItemCount=5}"
                CanUserReorderColumns="False"
                CanUserResizeColumns="False"
                CanUserResizeRows="False"
                IsReadOnly="True" SelectionChanged="employee_ReportDataGrid_SelectionChanged" IsEnabled="False" />

            <Grid Grid.Row="2" Background="AliceBlue">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="0.5*" />
                </Grid.ColumnDefinitions>

                <Label
                    Margin="10,0,0,0"
                    Content="Task Schedule"
                    FontSize="24" />

                <ComboBox
                    x:Name="cbxFilterRep1"
                    Grid.Column="2"
                    Margin="5"
                    HorizontalAlignment="Stretch"
                    FontSize="16"
                    IsEditable="True"
                    IsReadOnly="True"
                    Text="Filter by" />

                <Button
                    x:Name="btnExport1"
                    Grid.Column="3"
                    Margin="5,5,10,5"
                    Content="Export"
                    FontSize="16" />
            </Grid>

            <DataGrid x:Name="taskSchedule_ReportDataGrid"
                Grid.Row="3"
                d:ItemsSource="{d:SampleData ItemCount=5}"
                CanUserReorderColumns="False"
                CanUserResizeColumns="False"
                CanUserResizeRows="False"
                IsReadOnly="True" />
        </Grid>
    </Grid>
</UserControl>
