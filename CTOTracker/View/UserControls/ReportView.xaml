<UserControl
    x:Class="CTOTracker.View.UserControls.ReportView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CTOTracker.View.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    d:DesignHeight="768"
    d:DesignWidth="1360"
    Focusable="True"
    mc:Ignorable="d">
    <Grid Focusable="True">

        <!--  ScheduleDisplay  -->
        <Grid
            Height="45"
            VerticalAlignment="Top"
            Focusable="True">
            <!--  Employee HEADER  -->
            <Grid Focusable="True">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="0.5*" />
                    <ColumnDefinition Width="0.5*" />
                    <ColumnDefinition Width="0.5*" />
                    <ColumnDefinition Width="0.5*" />
                </Grid.ColumnDefinitions>

                <Label
                    Margin="10,0,0,0"
                    Content="Report"
                    FontSize="24" />

                <CheckBox
                    x:Name="chkbxAEmp"
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    Content="All Employees"
                    FontFamily="Roboto-Light"
                    FontSize="14"
                    Style="{DynamicResource CheckBoxStyle1}" />
                <CheckBox
                    x:Name="chkbxBalance"
                    Grid.Column="2"
                    VerticalAlignment="Center"
                    Content="CTO Balance"
                    FontFamily="Roboto-Light"
                    FontSize="14"
                    Style="{DynamicResource CheckBoxStyle1}" />
                <CheckBox
                    x:Name="chkbxUsed"
                    Grid.Column="3"
                    VerticalAlignment="Center"
                    Content="CTO Used"
                    FontFamily="Roboto-Light"
                    FontSize="14"
                    Style="{DynamicResource CheckBoxStyle1}" />

                <Button
                    x:Name="btnExport"
                    Grid.Column="4"
                    Margin="5,5,10,5"
                    HorizontalAlignment="Stretch"
                    Content="Export"
                    FontSize="16"
                    Style="{StaticResource button_style}" />

            </Grid>
        </Grid>

        <Grid
            x:Name="dtPnl"
            Height="723"
            Margin="0,45,0,0"
            Focusable="True">
            <!--  SCHDULE_TABLE  -->
            <DataGrid
                x:Name="reportDataGrid"
                Height="718"
                Margin="0,0,10,5"
                d:ItemsSource="{d:SampleData ItemCount=5}"
                AutoGenerateColumns="False"
                CanUserReorderColumns="False"
                CanUserResizeColumns="False"
                CanUserResizeRows="False"
                IsReadOnly="True"
                Style="{StaticResource table_style}" />

        </Grid>
        <!--  Filter Panel  -->
        <Grid
            x:Name="FilterPnl"
            Height="40"
            VerticalAlignment="Top"
            Focusable="True">
            <StackPanel
                x:Name="ctrlFilter"
                Focusable="True"
                Orientation="Vertical">
                <Grid Width="1360" Height="40">
                    <!--  Filter Panel Toggle Button  -->
                    <!--<Label
                        Margin="0,5,840,0"
                        HorizontalAlignment="Right"
                        Content="Filters"
                        FontSize="16" />-->
                    <ToggleButton
                        x:Name="tgb_FilterPnl"
                        Margin="0,0,775,0"
                        Padding="0,0,0,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        HorizontalContentAlignment="Center"
                        Checked="tgb_FilterPnl_Checked"
                        materialDesign:ToggleButtonAssist.OnContent="{materialDesign:PackIcon Kind=MenuDown}"
                        Content="{materialDesign:PackIcon Kind=MenuUp}"
                        Style="{DynamicResource MaterialDesignFlatButton}"
                        Unchecked="tgb_FilterPnl_Unchecked">
                        <!--<materialDesign:PackIcon Kind="MenuDown" />-->
                    </ToggleButton>
                </Grid>
                <StackPanel Width="1360" Orientation="Horizontal">
                    <Grid Width="1360" Focusable="True">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="190" />
                            <ColumnDefinition Width="190" />
                            <ColumnDefinition Width="125" />
                            <ColumnDefinition Width="125" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <TextBox
                            x:Name="txtschFname"
                            Grid.Column="0"
                            Margin="0,25,10,10"
                            HorizontalAlignment="Stretch"
                            FontSize="14"
                            Foreground="Gray"
                            GotFocus="txtbx_GotFocus"
                            Loaded="txtbx_Loaded"
                            LostFocus="txtbx_LostFocus"
                            Style="{StaticResource txtbx_style}"
                            Tag="First Name"
                            TextChanged="txtschFname_TextChanged" />
                        <TextBox
                            x:Name="txtschLname"
                            Grid.Column="1"
                            Margin="0,25,10,10"
                            HorizontalAlignment="Stretch"
                            FontSize="14"
                            Foreground="Gray"
                            GotFocus="txtbx_GotFocus"
                            Loaded="txtbx_Loaded"
                            LostFocus="txtbx_LostFocus"
                            Style="{StaticResource txtbx_style}"
                            Tag="Last Name"
                            TextChanged="txtschLname_TextChanged" />
                        <ComboBox
                            x:Name="cmbxTask"
                            Grid.Column="2"
                            Margin="0,25,10,10"
                            HorizontalAlignment="Stretch"
                            FontSize="14"
                            Foreground="Gray"
                            Tag="Role"
                            Template="{DynamicResource ComboBoxTemplate1}" />
                        <ComboBox
                            x:Name="cmbxRole"
                            Grid.Column="3"
                            Margin="0,25,10,10"
                            HorizontalAlignment="Stretch"
                            FontSize="14"
                            Foreground="Gray"
                            Tag="Role"
                            Template="{DynamicResource ComboBoxTemplate1}" />
                        <DatePicker
                            x:Name="dtEDate"
                            Grid.Column="4"
                            Margin="0,25,10,10"
                            HorizontalAlignment="Stretch"
                            FontSize="14" />
                        <DatePicker
                            x:Name="dtUDate"
                            Grid.Column="5"
                            Margin="0,25,10,10"
                            HorizontalAlignment="Stretch"
                            FontSize="14" />
                    </Grid>
                </StackPanel>
            </StackPanel>
        </Grid>

        <!--  Employee Filtered Panel  -->

        <Grid
            x:Name="EmpFilPnl"
            Grid.Row="1"
            Background="AliceBlue"
            Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="20*" />
                <RowDefinition Height="80*" />
            </Grid.RowDefinitions>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="3*" />
                </Grid.ColumnDefinitions>

                <Label
                    Margin="25,0,0,0"
                    Content="Employee"
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="Black" />

                <Label
                    Grid.Row="1"
                    Height="48"
                    Margin="50,0,0,0"
                    VerticalContentAlignment="Center"
                    Content="Name:"
                    FontSize="20"
                    Foreground="Black" />
                <ComboBox
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="10,5,50,5"
                    VerticalContentAlignment="Center" />

                <Label
                    Grid.Row="3"
                    Margin="50,0,0,0"
                    VerticalContentAlignment="Center"
                    Content="Infor ID:"
                    FontSize="20"
                    Foreground="Black" />
                <Label
                    x:Name="lblID"
                    Grid.Row="3"
                    Grid.Column="1"
                    Margin="10,0,0,0"
                    VerticalContentAlignment="Center"
                    Content="PLACEHOLDER"
                    FontSize="20"
                    Foreground="Black" />

                <Label
                    Grid.Row="1"
                    Grid.Column="2"
                    VerticalContentAlignment="Center"
                    Content="Contact Number:"
                    FontSize="20"
                    Foreground="Black" />
                <Label
                    x:Name="lblConNum"
                    Grid.Row="1"
                    Grid.Column="4"
                    Margin="10,0,0,0"
                    VerticalContentAlignment="Center"
                    Content="PLACEHOLDER"
                    FontSize="20"
                    Foreground="Black" />

                <Label
                    Grid.Row="2"
                    Grid.Column="2"
                    Content="Role:"
                    FontSize="20"
                    Foreground="Black" />
                <Label
                    x:Name="lblRole"
                    Grid.Row="3"
                    Grid.Column="4"
                    Margin="10,0,0,0"
                    VerticalContentAlignment="Center"
                    Content="PLACEHOLDER"
                    FontSize="20"
                    Foreground="Black" />

            </Grid>


            <DataGrid
                x:Name="scheduleDataGrid1"
                Grid.Row="1"
                Margin="0,0,10,5"
                d:ItemsSource="{d:SampleData ItemCount=5}"
                CanUserReorderColumns="False"
                CanUserResizeColumns="False"
                CanUserResizeRows="False"
                IsReadOnly="True"
                Style="{StaticResource table_style}" />
        </Grid>

    </Grid>
</UserControl>


