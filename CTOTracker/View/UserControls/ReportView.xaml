<UserControl
    x:Class="CTOTracker.View.UserControls.ReportView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CTOTracker.View.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="768"
    d:DesignWidth="1360"
    mc:Ignorable="d">
    <Grid>

        <!--  ScheduleDisplay  -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="5*" />
                <RowDefinition Height="80*" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <!--  Employee HEADER  -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="0.4*" />
                </Grid.ColumnDefinitions>

                <Label
                    Margin="10,0,0,0"
                    Content="Employee"
                    FontSize="24" />

                <ComboBox
                    x:Name="cbxFilterRep"
                    Grid.Column="2"
                    Margin="5"
                    HorizontalAlignment="Stretch"
                    FontSize="16"
                    IsEditable="True"
                    IsReadOnly="True"
                    Template="{DynamicResource ComboBoxTemplate1}"
                    Text="Filter by" />

                <Button
                    x:Name="btnExport"
                    Grid.Column="3"
                    Margin="5,5,10,5"
                    HorizontalAlignment="Stretch"
                    Content="Export"
                    FontSize="16"
                    Style="{StaticResource button_style}" />
            </Grid>

            <!--  SCHDULE_TABLE  -->
            <DataGrid
                x:Name="scheduleDataGrid"
                Grid.Row="1"
                Margin="0,0,10,5"
                d:ItemsSource="{d:SampleData ItemCount=5}"
                CanUserReorderColumns="False"
                CanUserResizeColumns="False"
                CanUserResizeRows="False"
                IsReadOnly="True"
                Style="{StaticResource table_style}" />

            <!--  Employee Filtered Panel  -->
            <Grid
                x:Name="EmpFilPnl"
                Grid.Row="1"
                Background="AliceBlue"
                Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="20*" />
                    <RowDefinition Height="80*" />
                </Grid.RowDefinitions>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="3*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="3*" />
                    </Grid.ColumnDefinitions>

                    <Label
                        Margin="25,0,0,0"
                        Content="Employee"
                        FontSize="20"
                        FontWeight="Bold"
                        Foreground="Black" />

                    <Label
                        Grid.Row="1"
                        Height="48"
                        Margin="50,0,0,0"
                        VerticalContentAlignment="Center"
                        Content="Name:"
                        FontSize="20"
                        Foreground="Black" />
                    <ComboBox
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="10,5,50,5"
                        VerticalContentAlignment="Center" />

                    <Label
                        Grid.Row="3"
                        Margin="50,0,0,0"
                        VerticalContentAlignment="Center"
                        Content="Infor ID:"
                        FontSize="20"
                        Foreground="Black" />
                    <Label
                        x:Name="lblID"
                        Grid.Row="3"
                        Grid.Column="1"
                        Margin="10,0,0,0"
                        VerticalContentAlignment="Center"
                        Content="PLACEHOLDER"
                        FontSize="20"
                        Foreground="Black" />

                    <Label
                        Grid.Row="1"
                        Grid.Column="2"
                        VerticalContentAlignment="Center"
                        Content="Contact Number:"
                        FontSize="20"
                        Foreground="Black" />
                    <Label
                        x:Name="lblConNum"
                        Grid.Row="1"
                        Grid.Column="4"
                        Margin="10,0,0,0"
                        VerticalContentAlignment="Center"
                        Content="PLACEHOLDER"
                        FontSize="20"
                        Foreground="Black" />

                    <Label
                        Grid.Row="2"
                        Grid.Column="2"
                        Content="Role:"
                        FontSize="20"
                        Foreground="Black" />
                    <Label
                        x:Name="lblRole"
                        Grid.Row="3"
                        Grid.Column="4"
                        Margin="10,0,0,0"
                        VerticalContentAlignment="Center"
                        Content="PLACEHOLDER"
                        FontSize="20"
                        Foreground="Black" />

                </Grid>


                <DataGrid
                    x:Name="scheduleDataGrid1"
                    Grid.Row="1"
                    Margin="0,0,10,5"
                    d:ItemsSource="{d:SampleData ItemCount=5}"
                    CanUserReorderColumns="False"
                    CanUserResizeColumns="False"
                    CanUserResizeRows="False"
                    IsReadOnly="True"
                    Style="{StaticResource table_style}" />
            </Grid>


        </Grid>
    </Grid>
</UserControl>
