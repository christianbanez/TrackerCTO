<UserControl x:Class="CTOTracker.View.UserControls.RoleTaskView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CTOTracker.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid>
            <DataGrid
            x:Name="roleDataGrid"
            Margin="38,147,446,38"
            d:ItemsSource="{d:SampleData ItemCount=5}"
            AutoGenerateColumns="False"
            CanUserReorderColumns="False"
            CanUserResizeColumns="False"
            CanUserResizeRows="False"
            IsReadOnly="True"
            AutoGeneratedColumns="roleDataGrid_AutoGeneratedColumns" />
        </Grid>
        
        <TextBox x:Name="roleName" HorizontalAlignment="Left" Margin="118,81,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="taskName" HorizontalAlignment="Left" Margin="526,81,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="roleSave" Content="Save" HorizontalAlignment="Left" Margin="294,113,0,0" VerticalAlignment="Top" Click="roleSave_Click"/>
        <Button x:Name="taskSave" Content="Save" HorizontalAlignment="Left" Margin="672,147,0,0" VerticalAlignment="Top"/>
    </Grid>
</UserControl>
