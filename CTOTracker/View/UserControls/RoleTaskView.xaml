<UserControl x:Class="CTOTracker.View.UserControls.RoleTaskView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CTOTracker.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid>
            <DataGrid
            x:Name="roleDataGrid"
            Margin="38,147,446,38"
            d:ItemsSource="{d:SampleData ItemCount=5}"
            AutoGenerateColumns="False"
            CanUserReorderColumns="False"
            CanUserResizeColumns="False"
            CanUserResizeRows="False"
            IsReadOnly="True"
            AutoGeneratedColumns="roleDataGrid_AutoGeneratedColumns" />
            <DataGrid
                x:Name="taskGridView"
                Margin="372,147,112,38"
                d:ItemsSource="{d:SampleData ItemCount=5}"
                AutoGenerateColumns="False"
                CanUserReorderColumns="False"
                CanUserResizeColumns="False"
                CanUserResizeRows="False"
                IsReadOnly="True"
                AutoGeneratedColumns="roleDataGrid_AutoGeneratedColumns" />
            <Button x:Name="deleteBtn" Content="DELETE" HorizontalAlignment="Left" Visibility="Collapsed" Margin="565,86,0,0" VerticalAlignment="Top" Click="deleteBtn_Click"/>
            <Button x:Name="updateBtn" Content="SAVE" HorizontalAlignment="Left" Visibility="Collapsed" Margin="530,86,0,0" VerticalAlignment="Top" Click="updateBtn_Click"/>
            <Label Content="Task Name:" HorizontalAlignment="Left" Margin="380,60,0,0" VerticalAlignment="Top"/>
            <Label Content="Task Description : " HorizontalAlignment="Left" Margin="379,101,0,0" VerticalAlignment="Top"/>
        </Grid>

        <TextBox x:Name="roleName" HorizontalAlignment="Left" Margin="118,81,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="taskNameInput" HorizontalAlignment="Left" Margin="378,87,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="149"/>
        <Button x:Name="roleSave" Content="Save" HorizontalAlignment="Left" Margin="294,113,0,0" VerticalAlignment="Top" Click="roleSave_Click"/>
        <Button x:Name="addBtnClick" Content="ADD" HorizontalAlignment="Left" Margin="532,86,0,0" VerticalAlignment="Top" Click="taskSaveBtn_Click_1"/>
        <TextBox x:Name="taskDescInput" HorizontalAlignment="Left" Margin="378,123,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="280"/>
        <Button x:Name="editBtn" Content="EDIT" HorizontalAlignment="Left" Margin="566,86,0,0" VerticalAlignment="Top" Click="editBtn_Click"/>
        <Button x:Name="cancelBtn" Content="CANCEL" HorizontalAlignment="Left" Margin="611,86,0,0" VerticalAlignment="Top" Click="cancelBtn_Click"/>
    </Grid>
</UserControl>
