<UserControl
    x:Class="CTOTracker.View.ScheduleView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CTOTracker.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="768"
    d:DesignWidth="1360"
    mc:Ignorable="d">

    <Grid>

        <!--  ScheduleDisplay  -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="5*" />
                <RowDefinition Height="300" />
                <RowDefinition Height="5*" />
                <RowDefinition Height="5*" />
                <RowDefinition Height="300" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <!--  HEADER  -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="125" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBox
                    x:Name="tbxSearch"
                    Grid.Column="0"
                    Margin="5"
                    HorizontalAlignment="Stretch"
                    FontSize="18"
                    Text="Search"
                    TextWrapping="Wrap" />

                <ComboBox
                    x:Name="cbxSearch"
                    Grid.Column="1"
                    Margin="5"
                    HorizontalAlignment="Stretch"
                    FontSize="16"
                    IsEditable="True"
                    IsReadOnly="True"
                    Text="Search by" />

                <ComboBox
                    x:Name="cbxFilter"
                    Grid.Column="2"
                    Margin="5"
                    HorizontalAlignment="Stretch"
                    FontSize="16"
                    IsEditable="True"
                    IsReadOnly="True"
                    Text="Filter by"/>

                <Button
                    x:Name="btnSearchSched"
                    Grid.Column="3"
                    Margin="5,5,60,5"
                    Content="Search"
                    FontSize="16" />

                <Button
                    x:Name="btnAssignTask"
                    Grid.Column="5"
                    Margin="50,5,5,5"
                    Click="btnAssignTask_Click"
                    Content="Assign Task"
                    FontSize="16" />
            </Grid>

            <!--  SCHDULE_TABLE  -->
            <DataGrid
                x:Name="scheduleDataGrid"
                Grid.Row="1"
                d:ItemsSource="{d:SampleData ItemCount=12}"
                AutoGeneratedColumns="DataGrid_AutoGenerateColumns"
                CanUserReorderColumns="False"
                CanUserResizeColumns="False"
                CanUserResizeRows="False"
                HeadersVisibility="Column"
                IsReadOnly="True"
                Style="{StaticResource table_style}" MouseDoubleClick="DataGridRow_MouseDoubleClick_1"/>

            <!--  TOTAL_SELECTED_PANEL  -->
            <Grid Grid.Row="2">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="15*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="1.5*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Button
                        x:Name="btnSaveCTOused"
                        Grid.Column="1"
                        Margin="5"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Content="Save" />
                    <Label
                        Grid.Column="2"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        Content="Total Selected :" />
                    <Label
                        Grid.Column="3"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        Content="NUMBER" />
                </Grid>
            </Grid>

            <!--  TOTAL_EARNED_PANEL  -->
            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="15*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="1.5*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Label
                    Grid.Column="2"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Content="Total Earned : " />
                <Label
                    Grid.Column="3"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Content="NUMBER" />
            </Grid>
            <DataGrid
                Grid.Row="4"
                d:ItemsSource="{d:SampleData ItemCount=5}"
                CanUserReorderColumns="False"
                CanUserResizeColumns="False"
                CanUserResizeRows="False"
                IsReadOnly="True"
                Style="{StaticResource table_style}" />
        </Grid>
    </Grid>
</UserControl>