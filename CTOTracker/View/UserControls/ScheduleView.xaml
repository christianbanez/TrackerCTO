<UserControl
    x:Class="CTOTracker.View.ScheduleView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CTOTracker.View"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="768"
    d:DesignWidth="1360"
    mc:Ignorable="d">

    <Grid>

        <!--  ScheduleDisplay  -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="3*" />
                <RowDefinition Height="3*" />
                <RowDefinition Height="260" />
                <RowDefinition Height="3*" />
                <RowDefinition Height="3*" />
                <RowDefinition Height="3*" />
                <RowDefinition Height="260" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <!--  HEADER  -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="125" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBox
                    x:Name="employeeNameTextBox"
                    Grid.Column="0"
                    Margin="5"
                    HorizontalAlignment="Stretch"
                    FontSize="18"
                    Text="Search"
                    TextWrapping="Wrap" 
                     />

                <ComboBox
                    x:Name="cbxEmployee"
                    Margin="216,51,206,-40"
                    FontSize="16"
                    IsEditable="True"
                    IsReadOnly="True"
                    Text="Search by" />

                <ComboBox
                    x:Name="cbxFilter"
                    Grid.Column="2"
                    Margin="5"
                    HorizontalAlignment="Stretch"
                    FontSize="16"
                    IsEditable="True"
                    IsReadOnly="True"
                    Text="Filter by"/>

                <Button
                    x:Name="btnAssignTask"
                    Grid.Column="5"
                    Margin="50,5,5,5"
                    HorizontalAlignment="Stretch"
                    Click="btnAssignTask_Click"
                    Content="Assign Task"
                    FontSize="14"
                    Style="{StaticResource button_style}" />
            </Grid>

            <Label
                Content="Schedule"
                FontSize="24"
                Foreground="Black"
                Style="{StaticResource font_style}" />

            <!--  SCHDULE_TABLE  -->
            <DataGrid
                x:Name="scheduleDataGrid"
                Grid.Row="2"
                d:ItemsSource="{d:SampleData ItemCount=12}"
              
                CanUserReorderColumns="False"
                CanUserResizeColumns="False"
                CanUserResizeRows="False"
                HeadersVisibility="Column"
                IsReadOnly="True"
                Style="{StaticResource table_style}" MouseDoubleClick="DataGridRow_MouseDoubleClick_1"/>

            <!--  TOTAL_SELECTED_PANEL  -->
            <Grid Grid.Row="3">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="15*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="1.5*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Button
                        x:Name="btnUseCtoUsed"
                        Grid.Column="1"
                        Margin="5,0,5,5"
                        VerticalAlignment="Bottom"
                        Content="USE" Height="30" Click="btnUseCtoUsed_Click" />
                    <Label
                        Grid.Column="2"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        Content="Total Selected :" />
                    <Label
                        Grid.Column="3"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        Content="NUMBER" />
                </Grid>
            </Grid>

            <!--  TOTAL_EARNED_PANEL  -->
            <Grid Grid.Row="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="15*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="1.5*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Label
                    Grid.Column="2"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Content="Total Earned : " />
                <Label
                    Grid.Column="3"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Content="NUMBER" />
            </Grid>
            <DataGrid x:Name="ctoUseDataGrid"
                Grid.Row="6"
                d:ItemsSource="{d:SampleData ItemCount=12}"
                CanUserReorderColumns="False"
                CanUserResizeColumns="False"
                CanUserResizeRows="False"
                HeadersVisibility="Column"
                IsReadOnly="True"
                Style="{StaticResource table_style}" AutoGeneratedColumns="ctoUseDataGrid_AutoGeneratedColumns" Margin="0,19,0,28" Grid.RowSpan="2"/>
            <Label
                Content="Employee:"
                FontSize="20"
                Foreground="Black"
                Style="{StaticResource font_style}" Margin="106,0,0,0" Grid.Row="1" />
            <CheckBox x:Name="showallChkBox" Checked="showallChecked" Unchecked="showallUnchecked" Content="Show All" HorizontalAlignment="Left" Margin="471,0,0,0" Grid.Row="1" VerticalAlignment="Center" Height="16" Width="78"/>

            <DatePicker x:Name="monthPicker"
            DisplayDateStart="2000-01-01"
            DisplayDateEnd="2100-12-31"
            DisplayDate="{x:Static sys:DateTime.Now}"
            HorizontalAlignment="Left"
            Margin="598,10,0,10"
            SelectedDateChanged="monthPicker_SelectedDateChanged" Grid.Row="1"> 
                <DatePicker.Resources>
                    <Style TargetType="DatePickerTextBox">
                        <Setter Property="Control.Template">
                            <Setter.Value>
                                <ControlTemplate>
                                    <TextBox x:Name="PART_TextBox"
                                    IsReadOnly="True"
                                    Text="{Binding SelectedDate, RelativeSource={RelativeSource AncestorType={x:Type DatePicker}}, StringFormat='{}{0:MMMM yyyy}'}"/>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </DatePicker.Resources>
            </DatePicker>

        </Grid>
    </Grid>
</UserControl>