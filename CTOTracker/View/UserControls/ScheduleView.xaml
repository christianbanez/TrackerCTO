<UserControl
    x:Class="CTOTracker.View.ScheduleView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CTOTracker.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="768"
    d:DesignWidth="1360"
    mc:Ignorable="d">

    <UserControl.Resources>
        <Style x:Key="table_style" TargetType="DataGrid">
            <!--  Set row height  -->
            <Setter Property="RowHeight" Value="30" />

            <!--  Set background and border properties  -->
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="HorizontalGridLinesBrush" Value="Transparent" />
            <Setter Property="VerticalGridLinesBrush" Value="Transparent" />

            <!--  Set row background color on mouse over  -->
            <Setter Property="RowStyle">
                <Setter.Value>
                    <Style TargetType="DataGridRow">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E3F2FD" />
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#BBDEFB" />
                                <!--  Remove padding when row is selected  -->
                                <Setter Property="Margin" Value="0" />
                            </Trigger>
                        </Style.Triggers>
                        <Setter Property="BorderThickness" Value="0" />
                        <!--  Add spacing between rows  -->
                        <Setter Property="Margin" Value="0,2" />
                    </Style>
                </Setter.Value>
            </Setter>

            <!--  Set cell style  -->
            <Setter Property="CellStyle">
                <Setter.Value>
                    <Style TargetType="DataGridCell">
                        <Style.Triggers>
                            <!--  Highlight selected rows  -->
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#BBDEFB" />
                                <Setter Property="BorderBrush" Value="Transparent" />
                                <Setter Property="Foreground" Value="#333333" />
                            </Trigger>
                            <!--  Highlight focused rows  -->
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="Background" Value="#BBDEFB" />
                                <Setter Property="BorderBrush" Value="#2196F3" />
                                <Setter Property="BorderThickness" Value="1" />
                                <Setter Property="Foreground" Value="#333333" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Setter.Value>
            </Setter>
            
            <!--  Style the column headers  -->
            <Setter Property="ColumnHeaderStyle">
                <Setter.Value>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#FF4780AD" />
                        <Setter Property="Foreground" Value="White" />
                        <Setter Property="BorderBrush" Value="#CCCCCC" />
                        <Setter Property="BorderThickness" Value="0,0,1,1" />
                        <Setter Property="Padding" Value="10" />
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>

        <!--  ScheduleDisplay  -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="5*" />
                <RowDefinition Height="300" />
                <RowDefinition Height="5*" />
                <RowDefinition Height="5*" />
                <RowDefinition Height="300" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <!--  HEADER  -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="125" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBox
                    x:Name="tbxSearch"
                    Grid.Column="0"
                    Margin="5"
                    HorizontalAlignment="Stretch"
                    FontSize="18"
                    Text="Search"
                    TextWrapping="Wrap" />

                <ComboBox
                    x:Name="cbxSearch"
                    Grid.Column="1"
                    Margin="5"
                    HorizontalAlignment="Stretch"
                    FontSize="16"
                    IsEditable="True"
                    IsReadOnly="True"
                    Text="Search by" />

                <ComboBox
                    x:Name="cbxFilter"
                    Grid.Column="2"
                    Margin="5"
                    HorizontalAlignment="Stretch"
                    FontSize="16"
                    IsEditable="True"
                    IsReadOnly="True"
                    Text="Filter by" />

                <Button
                    x:Name="btnSearchSched"
                    Grid.Column="3"
                    Margin="5,5,60,5"
                    Content="Search"
                    FontSize="16" />

                <Button
                    x:Name="btnAssignTask"
                    Grid.Column="5"
                    Margin="50,5,5,5"
                    Click="btnAssignTask_Click"
                    Content="Assign Task"
                    FontSize="16" />
            </Grid>

            <!--  SCHDULE_TABLE  -->
            <DataGrid
                Grid.Row="1"
                x:Name="scheduleDataGrid"
                d:ItemsSource="{d:SampleData ItemCount=12}"
                CanUserReorderColumns="False"
                CanUserResizeColumns="False"
                CanUserResizeRows="False"
                IsReadOnly="True"
                MouseDoubleClick="DataGridRow_MouseDoubleClick_1"
                Style="{StaticResource table_style}" AutoGeneratedColumns="DataGrid_AutoGenerateColumns"/>

            <!--  TOTAL_SELECTED_PANEL  -->
            <Grid Grid.Row="2">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="15*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="1.5*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Button
                        x:Name="btnSaveCTOused"
                        Grid.Column="1"
                        Margin="5"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Content="Save" />
                    <Label
                        Grid.Column="2"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        Content="Total Selected :" />
                    <Label
                        Grid.Column="3"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        Content="NUMBER" />
                </Grid>
            </Grid>

            <!--  TOTAL_EARNED_PANEL  -->
            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="15*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="1.5*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Label
                    Grid.Column="2"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Content="Total Earned : " />
                <Label
                    Grid.Column="3"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Content="NUMBER" />
            </Grid>
            <DataGrid
                Grid.Row="4"
                d:ItemsSource="{d:SampleData ItemCount=5}"
                CanUserReorderColumns="False"
                CanUserResizeColumns="False"
                CanUserResizeRows="False"
                IsReadOnly="True"
                Style="{StaticResource table_style}" />
        </Grid>
    </Grid>
</UserControl>