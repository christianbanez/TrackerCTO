<UserControl
    x:Class="CTOTracker.View.EmployeeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CTOTracker.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="768"
    d:DesignWidth="1360"
    mc:Ignorable="d">
    <Grid>
        <!--  EmployeeView  -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="35*" />
                <RowDefinition Height="65*" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <!--  EmployeeDisplay  -->
            <Grid>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="60*" />
                        <RowDefinition Height="40" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="20" />
                            <ColumnDefinition Width="5*" />
                            <ColumnDefinition Width="10*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="5*" />
                            <ColumnDefinition Width="10*" />
                            <ColumnDefinition Width="50" />
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <!--  Labels  -->
                        <Label
                            x:Name="lblID"
                            Grid.Row="1"
                            Grid.Column="1"
                            Margin="20"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Content="Infor ID: "
                            FontSize="16" />
                        <Label
                            x:Name="lblFname"
                            Grid.Row="2"
                            Grid.Column="1"
                            Margin="20"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Content="First Name: "
                            FontSize="16" />
                        <Label
                            x:Name="lblLname"
                            Grid.Row="3"
                            Grid.Column="1"
                            Margin="20"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Content="Last Name: "
                            FontSize="16" />
                        <Label
                            x:Name="lblEmail"
                            Grid.Row="1"
                            Grid.Column="4"
                            Margin="20"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Content="Email: "
                            FontSize="16" />
                        <Label
                            x:Name="lblContact"
                            Grid.Row="2"
                            Grid.Column="4"
                            Margin="20"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Content="Contact Number: "
                            FontSize="16" />
                        <Label
                            x:Name="lblRole"
                            Grid.Row="3"
                            Grid.Column="4"
                            Margin="20"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Content="Role: "
                            FontSize="16" />

                        <!--  Fields  -->
                        <TextBox
                            x:Name="txtEmpID"
                            Grid.Row="1"
                            Grid.Column="2"
                            Margin="20"
                            IsEnabled="False"
                            PreviewTextInput="txtEmpID_PreviewTextInput"
                            Style="{StaticResource txtbx_style}" />
                        <TextBox
                            x:Name="txtFname"
                            Grid.Row="2"
                            Grid.Column="2"
                            Margin="20"
                            IsEnabled="False"
                            Style="{StaticResource txtbx_style}" />
                        <TextBox
                            x:Name="txtLname"
                            Grid.Row="3"
                            Grid.Column="2"
                            Margin="20"
                            IsEnabled="False"
                            Style="{StaticResource txtbx_style}" />
                        <TextBox
                            x:Name="txtEmail"
                            Grid.Row="1"
                            Grid.Column="5"
                            Margin="20"
                            IsEnabled="False"
                            Style="{StaticResource txtbx_style}" />
                        <TextBox
                            x:Name="txtContact"
                            Grid.Row="2"
                            Grid.Column="5"
                            Margin="20"
                            IsEnabled="False"
                            MaxLength="11"
                            PreviewTextInput="txtContact_PreviewTextInput"
                            Style="{DynamicResource txtbx_style}"
                            TabIndex="11" />
                        <ComboBox Template="{DynamicResource ComboBoxTemplate1}" 
                            x:Name="txtRole"
                            Grid.Row="3"
                            Grid.Column="5"
                            Margin="20"
                            IsEnabled="False"
                            Style="{DynamicResource ComboBoxStyle1}" />
                    </Grid>

                    <!--  AddEdit  -->
                    <Grid x:Name="AddEdit" Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="10*" />
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="15" />
                        </Grid.ColumnDefinitions>

                        <Button
                            x:Name="btnAdd"
                            Grid.Column="1"
                            Width="60"
                            Height="30"
                            Margin="5"
                            Click="btnAdd_Click"
                            Content="Add"
                            Style="{StaticResource button_style}" />
                        <Button
                            x:Name="btnEdit"
                            Grid.Column="2"
                            Width="60"
                            Height="30"
                            Margin="5"
                            Click="btnEdit_Click"
                            Content="Update"
                            Style="{StaticResource button_style}" />
                    </Grid>

                    <!--  AddPnl  -->
                    <Grid x:Name="AddPnl" Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="10*" />
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="15" />
                        </Grid.ColumnDefinitions>

                        <Button
                            x:Name="btnSaveAdd"
                            Grid.Column="1"
                            Width="60"
                            Height="30"
                            Margin="5"
                            Click="btnSaveAdd_Click"
                            Content="Save"
                            Style="{StaticResource button_style}" />
                        <Button
                            x:Name="btnCancel"
                            Grid.Column="2"
                            Width="60"
                            Height="30"
                            Margin="5"
                            Click="btnCancel_Click"
                            Content="Cancel"
                            Style="{StaticResource button_style}" />
                    </Grid>

                    <!--  UpdatePnl  -->
                    <Grid x:Name="UpdatePnl" Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="10*" />
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="15" />
                        </Grid.ColumnDefinitions>

                        <Button
                            x:Name="btnSaveUp"
                            Grid.Column="1"
                            Width="60"
                            Height="30"
                            Margin="5"
                            Click="btnSaveUp_Click"
                            Content="Save"
                            Style="{StaticResource button_style}" />
                        <Button
                            x:Name="btnDelete"
                            Grid.Column="2"
                            Width="60"
                            Height="30"
                            Margin="5"
                            Click="btnDelete_Click_1"
                            Content="Delete"
                            Style="{StaticResource button_style}" />
                        <Button
                            x:Name="btnCancel2"
                            Grid.Column="3"
                            Width="60"
                            Height="30"
                            Margin="5"
                            Click="btnCancel2_Click"
                            Content="Cancel"
                            Style="{StaticResource button_style}" />
                    </Grid>
                </Grid>
            </Grid>

            <!--  EmployeeTable  -->
            <DataGrid
                x:Name="DataGridEmployee1"
                Grid.Row="1"
                d:ItemsSource="{d:SampleData ItemCount=6}"
                AutoGeneratedColumns="DataGridEmployee1_AutoGeneratedColumns"
                CanUserDeleteRows="False"
                CanUserReorderColumns="False"
                CanUserResizeColumns="False"
                CanUserResizeRows="False"
                CanUserSortColumns="False"
                HeadersVisibility="Column"
                SelectionChanged="DataGridEmployee1_SelectionChanged_1"
                SelectionMode="Single"
                Style="{StaticResource table_style}" />
        </Grid>
    </Grid>
</UserControl>