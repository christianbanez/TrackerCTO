<Window
    x:Class="CTOTracker.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CTOTracker"
    xmlns:usercontrols="clr-namespace:CTOTracker.View.UserControls"
    xmlns:usercontrol="clr-namespace:CTOTracker.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="MainWindow1"
    Title="MainWindow"
    Width="1360"
    Height="768"
    mc:Ignorable="d" Padding="5,5,5,5" MinWidth="1360" MinHeight="768"
    MaxWidth="1360" MaxHeight="768" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <!--  SideNav  -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="277*" />
            <ColumnDefinition Width="78*"/>
            <ColumnDefinition Width="166*"/>
            <ColumnDefinition Width="689*"/>
        </Grid.ColumnDefinitions>

        <usercontrols:SideNav Loaded="SideNav_Loaded" />

        <!--  MainPage  -->
        <!--<Frame Source="usercontrol.EmployeeView"  Grid.Column="1"/>-->
        <Frame Grid.Column="1" x:Name="Main" Margin="15,15,15,15" NavigationUIVisibility="Hidden" Loaded="homeLoad" Grid.ColumnSpan="4"/>

    </Grid>
</Window>

