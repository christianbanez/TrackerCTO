<Window
    x:Class="CTOTracker.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CTOTracker"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:usercontrol="clr-namespace:CTOTracker.View"
    xmlns:usercontrols="clr-namespace:CTOTracker.View.UserControls"
    x:Name="Employee_Tracker"
    Title="Employee Tracker"
    Width="1360"
    Height="768"
    MinWidth="1360"
    MinHeight="768"
    MaxWidth="1360"
    MaxHeight="798"
    Padding="5,5,5,5"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <Window.Template>
        <ControlTemplate TargetType="Window">
            <Grid>
                <!--  Main Content Area  -->
                <Border
                    Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}">
                    <AdornerDecorator>
                        <ContentPresenter />
                    </AdornerDecorator>
                </Border>

                <!--  Title Bar  -->
                <Border
                    Height="30"
                    VerticalAlignment="Top"
                    Background="#FF5D608C"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                    <Grid>
                        <TextBlock
                            Margin="10,0,0,0"
                            VerticalAlignment="Center"
                            FontSize="16"
                            FontWeight="Bold"
                            Foreground="White"
                            Text="{TemplateBinding Title}" />
                        <Button
                            Width="20"
                            Height="20"
                            Margin="0,0,5,0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            Click="CloseButton_Click"
                            Content="X"
                            Foreground="White" />
                    </Grid>
                </Border>
            </Grid>
        </ControlTemplate>
    </Window.Template>

    <Window.Resources>
        <!--  Toggle Button Style Template  -->
        <ImageBrush
            x:Key="tb_mouse_over"
            ImageSource="Assets/tgbMenu_MouseOver.png"
            Stretch="Uniform" />

        <!--  Text font style  -->

        <Style x:Key="font_style" TargetType="Label">
            <Setter Property="FontFamily" Value="Fonts/Roboto.ttf #Roboto" />

            <Setter Property="VerticalAlignment" Value="Center" />

            <Setter Property="HorizontalAlignment" Value="Left" />

            <Setter Property="Foreground" Value="White" />

            <Setter Property="FontSize" Value="20" />
        </Style>

        <Style x:Key="tt_style" TargetType="ToolTip">
            <Setter Property="Placement" Value="Right" />
            <Setter Property="Height" Value="40" />
            <Setter Property="Width" Value="100" />
            <Setter Property="Margin" Value="20,0,0,0" />
            <Setter Property="Background" Value="#4A5668" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontFamily" Value="Fonts/Roboto-Light.ttf #Roboto" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="PlacementRectangle" Value="60,0,0,0" />
            <Setter Property="HorizontalOffset" Value="15" />
            <Setter Property="VerticalOffset" Value="6" />
            <Setter Property="HasDropShadow" Value="True" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
        </Style>

        <Style x:Key="tb_style" TargetType="{x:Type ToggleButton}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ToggleButton}">
                        <Border
                            x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            SnapsToDevicePixels="True" />
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource tb_mouse_over}" />
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource tb_mouse_over}" />
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect
                                            BlurRadius="10"
                                            Direction="-90"
                                            ShadowDepth="1"
                                            Color="White" />
                                    </Setter.Value>
                                </Setter>
                            </Trigger>

                            <Trigger Property="IsChecked" Value="true">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource tb_mouse_over}" />
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource tb_mouse_over}" />
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect
                                            BlurRadius="10"
                                            Direction="-90"
                                            ShadowDepth="1"
                                            Color="White" />
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!--<Border CornerRadius="10" BorderThickness="20">
        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0.5" EndPoint="0,1">
                <GradientStop Color="#FFECF4FB" Offset="0" />
                <GradientStop Color="#FFC9D1EA"  Offset="1" />
            </LinearGradientBrush>
        </Border.BorderBrush>-->

    <Grid>

        <!--  BG  -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0.5" EndPoint="0,1">
                <GradientStop Offset="0" Color="#FFECF4FB" />
                <GradientStop Offset="1" Color="#FFC9D1EA" />
            </LinearGradientBrush>
        </Grid.Background>

        <!--  Main panel  -->
        <Grid
            x:Name="MainPnl"
            Width="1290"
            Margin="0,30,0,0"
            HorizontalAlignment="Right">

            <Frame
                x:Name="frmMain"
                Grid.RowSpan="2"
                Margin="10,10,10,10"
                Loaded="frmMain_Loaded"
                NavigationUIVisibility="Hidden" />

            <!--  Overlay  -->
            <Grid
                x:Name="OverlayGrid"
                Background="Black"
                Visibility="Collapsed" />
        </Grid>

        <!--  Side Navigation Drawer  -->
        <Grid
            x:Name="sideNav"
            Width="65"
            Margin="0,30,0,0"
            HorizontalAlignment="Left">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                    <GradientStop Offset="1" Color="#FF36385D" />
                    <GradientStop Offset="0" Color="#FF606390" />
                </LinearGradientBrush>
            </Grid.Background>

            <StackPanel x:Name="stpnlBtns">
                <!--  Menu toggle Grid  -->
                <Grid Height="90">

                    <!--  Menu text  -->
                    <Label
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="73,-20,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        Content="M E N U"
                        FontSize="20"
                        Foreground="White">

                        <!--  // Shadow Effect //  -->

                        <Label.Effect>

                            <DropShadowEffect
                                BlurRadius="10"
                                Direction="-90"
                                ShadowDepth="1"
                                Color="White" />
                        </Label.Effect>
                    </Label>

                    <!--  Toggle Button  -->
                    <ToggleButton
                        x:Name="tgbMenu"
                        Grid.Column="0"
                        Width="30"
                        Height="30"
                        Margin="18,-20,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        BorderThickness="0"
                        Checked="tgbMenu_Checked"
                        MouseEnter="tgbMenu_MouseEnter"
                        Style="{StaticResource tb_style}"
                        Unchecked="tgbMenu_Unchecked">
                        <ToggleButton.Background>
                            <ImageBrush ImageSource="Assets/tgbMenu.png" Stretch="Uniform" />
                        </ToggleButton.Background>

                        <!--  Toggle button events  -->
                        <ToggleButton.Triggers>

                            <EventTrigger RoutedEvent="ToggleButton.Unchecked">
                                <BeginStoryboard>
                                    <Storyboard x:Name="HideStackPanel">
                                        <DoubleAnimation
                                            BeginTime="0:0:0"
                                            Storyboard.TargetName="sideNav"
                                            Storyboard.TargetProperty="Width"
                                            From="230"
                                            To="65"
                                            Duration="0:0:0.2" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>

                            <EventTrigger RoutedEvent="ToggleButton.Checked">
                                <BeginStoryboard>
                                    <Storyboard x:Name="ShowStackPanel">
                                        <DoubleAnimation
                                            BeginTime="0:0:0"
                                            Storyboard.TargetName="sideNav"
                                            Storyboard.TargetProperty="Width"
                                            From="65"
                                            To="230"
                                            Duration="0:0:0.3" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </ToggleButton.Triggers>
                    </ToggleButton>
                </Grid>

                <!--  ListView Menu list items  -->
                <ListView
                    x:Name="listSideNav"
                    Background="{x:Null}"
                    BorderBrush="Transparent"
                    Loaded="listSideNav_Loaded"
                    ScrollViewer.HorizontalScrollBarVisibility="Disabled">

                    <!--  EmloyeeView  -->
                    <ListViewItem
                        Margin="0,0,0,15"
                        HorizontalAlignment="Left"
                        Selected="ListViewItem_Selected">
                        <!--  EmpView Tooltip  -->
                        <ListViewItem.ToolTip>
                            <ToolTip
                                x:Name="ttEmp"
                                Content="Employee"
                                Style="{StaticResource tt_style}" />
                        </ListViewItem.ToolTip>

                        <StackPanel Width="230" Orientation="Horizontal">

                            <Image
                                Width="50"
                                Height="50"
                                Source="Assets/btnEmp.png"
                                Stretch="Uniform" />

                            <Label
                                Margin="25,0,0,0"
                                Content="Employee"
                                Style="{StaticResource font_style}" />
                        </StackPanel>
                    </ListViewItem>

                    <!--  ScheduleView  -->
                    <ListViewItem
                        Margin="0,0,0,15"
                        HorizontalAlignment="Left"
                        Selected="ListViewItem_Selected_1">
                        <!--  SchedView Tooltip  -->
                        <ListViewItem.ToolTip>
                            <ToolTip
                                x:Name="ttSched"
                                Content="Schedule"
                                Style="{StaticResource tt_style}" />
                        </ListViewItem.ToolTip>

                        <StackPanel Width="230" Orientation="Horizontal">
                            <Image
                                Width="50"
                                Height="50"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Source="Assets/btnSched.png"
                                Stretch="Uniform" />

                            <Label
                                Margin="25,0,0,0"
                                Content="Schedule"
                                Style="{StaticResource font_style}" />
                        </StackPanel>
                    </ListViewItem>

                    <!--  ReportView  -->
                    <ListViewItem Margin="0,0,0,15" HorizontalAlignment="Left">
                        <!--  RepView Tooltip  -->
                        <ListViewItem.ToolTip>
                            <ToolTip
                                x:Name="ttRep"
                                Content="Reports"
                                Style="{StaticResource tt_style}" />
                        </ListViewItem.ToolTip>

                        <StackPanel Width="230" Orientation="Horizontal">
                            <Image
                                Width="50"
                                Height="50"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Source="Assets/btnRep.png"
                                Stretch="Uniform" />

                            <Label
                                Margin="25,0,0,0"
                                Content="Reports"
                                Style="{StaticResource font_style}" />
                        </StackPanel>
                    </ListViewItem>

                    <!--  // Listview items style template //  -->
                    <ListView.ItemContainerStyle>

                        <Style TargetType="ListViewItem">

                            <Setter Property="Template">

                                <Setter.Value>

                                    <ControlTemplate TargetType="{x:Type ListViewItem}">
                                        <Border
                                            x:Name="Bd"
                                            Height="50"
                                            Padding="{TemplateBinding Padding}"
                                            Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            SnapsToDevicePixels="True">

                                            <ContentPresenter
                                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                                        </Border>

                                        <ControlTemplate.Triggers>
                                            <MultiTrigger>
                                                <MultiTrigger.Conditions>
                                                    <Condition Property="IsMouseOver" Value="True" />
                                                    <Condition Property="IsSelected" Value="False" />
                                                </MultiTrigger.Conditions>

                                                <Setter TargetName="Bd" Property="Background" Value="#FF6980B7" />

                                                <Setter TargetName="Bd" Property="BorderBrush" Value="#FF6980B7" />
                                            </MultiTrigger>

                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Bd" Property="Background" Value="#FF6980B7" />

                                                <Setter TargetName="Bd" Property="BorderBrush" Value="#FF6980B7" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>
            </StackPanel>
        </Grid>
    </Grid>

    <!--</Border>-->
</Window>