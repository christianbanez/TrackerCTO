<Window
    x:Class="CTOTracker.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CTOTracker"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:usercontrol="clr-namespace:CTOTracker.View"
    xmlns:usercontrols="clr-namespace:CTOTracker.View.UserControls"
    x:Name="MainWindow1"
    Title="MainWindow"
    Width="1360"
    Height="768"
    MinWidth="1360"
    MinHeight="768"
    MaxWidth="1360"
    MaxHeight="768"
    Padding="5,5,5,5"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <Window.Resources>
        <!--  Toggle Button Style Template  -->
        <ImageBrush x:Key="tb_mouse_over" ImageSource="Assets/tgbMenu_MouseOver.png" />

        <Style x:Key="tb_style" TargetType="{x:Type ToggleButton}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ToggleButton}">
                        <Border
                            x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            SnapsToDevicePixels="True" />
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource tb_mouse_over}" />
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource tb_mouse_over}" />
                            </Trigger>

                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource tb_mouse_over}" />
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource tb_mouse_over}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Grid>

        <!--  BG  -->
        <Grid Background="#FF161131">
            <Grid
                x:Name="sideNav"
                Width="65"
                HorizontalAlignment="Left"
                Background="#FF41446F">

                <StackPanel x:Name="stpnlBtns">
                    <!--  Menu toggle  -->
                    <Grid Height="90">
                        <ToggleButton
                            x:Name="tgbMenu"
                            Grid.Column="0"
                            Height="30"
                            Margin="18,20,0,0"
                            VerticalAlignment="Top"
                            BorderThickness="0">

                            <ToggleButton.Background>
                                <ImageBrush ImageSource="Assets/tgbMenu.png" Stretch="None" />
                            </ToggleButton.Background>

                            <!--  Toggle button events  -->

                            <ToggleButton.Triggers>

                                <EventTrigger RoutedEvent="ToggleButton.Unchecked">
                                    <BeginStoryboard>
                                        <Storyboard x:Name="HideStackPanel">
                                            <DoubleAnimation
                                                BeginTime="0:0:0"
                                                Storyboard.TargetName="sideNav"
                                                Storyboard.TargetProperty="Width"
                                                From="230"
                                                To="65"
                                                Duration="0:0:0.2" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>

                                <EventTrigger RoutedEvent="ToggleButton.Checked">
                                    <BeginStoryboard>
                                        <Storyboard x:Name="ShowStackPanel">
                                            <DoubleAnimation
                                                BeginTime="0:0:0"
                                                Storyboard.TargetName="sideNav"
                                                Storyboard.TargetProperty="Width"
                                                From="65"
                                                To="230"
                                                Duration="0:0:0.3" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>

                            </ToggleButton.Triggers>

                        </ToggleButton>
                    </Grid>
                </StackPanel>

            </Grid>

        </Grid>

        <!--  SideNav  -->
        <!--<Grid.ColumnDefinitions>
            <ColumnDefinition Width="150" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <usercontrols:SideNav />-->

        <!--  MainPage  -->
        <!--<Frame Source="usercontrol.EmployeeView"  Grid.Column="1"/>-->
        <!--<Frame Grid.Column="1" x:Name="Main" Margin="15" NavigationUIVisibility="Hidden" Loaded="homeLoad"/>-->

    </Grid>
</Window>

