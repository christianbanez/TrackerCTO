<Window
    x:Class="CTOTracker.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CTOTracker"
    xmlns:usercontrols="clr-namespace:CTOTracker.View.UserControls"
    xmlns:usercontrol="clr-namespace:CTOTracker.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="MAIN"
    Title="MainWindow"
    Width="1360"
    Height="768"
    mc:Ignorable="d" Padding="5,5,5,5" MinWidth="800" MinHeight="450">
    <Grid>
        <!--  SideNav  -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <usercontrols:SideNav Loaded="SideNav_Loaded" />

        <!--  MainPage  -->
        <DockPanel Grid.Column="1">
            <usercontrol:EmployeeView/>            
        </DockPanel>
        <!--<Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="25"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
        </Grid>-->
    </Grid>
</Window>
